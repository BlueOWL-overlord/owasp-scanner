# ─────────────────────────────────────────────────
# OWASP Dependency Scanner — Environment Variables
# Copy this file to .env and fill in your values
# ─────────────────────────────────────────────────

# ── Application ──────────────────────────────────
# Generate a strong random key:
#   python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-random-32-char-string
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ── Database ─────────────────────────────────────
DATABASE_URL=sqlite:///./data/app.db

# ── AI / Claude ──────────────────────────────────
# Get your API key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# ── OWASP Dependency Check ───────────────────────
# Windows native (download from https://github.com/jeremylong/DependencyCheck/releases):
OWASP_DC_PATH=C:\dependency-check\bin\dependency-check.bat
OWASP_DC_DATA_DIR=C:\dependency-check-data
JAVA_HOME=C:\Program Files\Eclipse Adoptium\jdk-21.0.10.7-hotspot

# NVD API key (free) — speeds up first-time NVD database download ~10x
# Without key : rate-limited to 1 request/6 s (can take hours)
# With key    : 50 requests/30 s  (typically 10-20 min)
# Request at  : https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=E7702AC9-5A0F-F111-8369-0EBF96DE670D

# Linux / Docker:
# OWASP_DC_PATH=/opt/dependency-check/bin/dependency-check.sh
# OWASP_DC_DATA_DIR=/opt/dependency-check-data

# ── File Storage ─────────────────────────────────
# Windows native (auto-created on startup):
UPLOAD_DIR=C:\Users\<YOUR_USERNAME>\owasp-scanner\uploads
REPORTS_DIR=C:\Users\<YOUR_USERNAME>\owasp-scanner\reports

# Linux / Docker:
# UPLOAD_DIR=/app/uploads
# REPORTS_DIR=/app/reports

# ── Azure DevOps (optional) ──────────────────────
AZURE_ORG_URL=https://dev.azure.com/your-org
AZURE_PAT=

# ── Jenkins (optional) ───────────────────────────
JENKINS_URL=http://your-jenkins:8080
JENKINS_USER=admin
JENKINS_TOKEN=

# ── AWS (optional) ───────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
